<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chessclock">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.chessclock.AddTimeActivity"
            android:parentActivityName="com.example.chessclock.TimeListActivity"
            android:theme="@style/activity_theme"></activity>
        <activity
            android:name="com.example.chessclock.TimeListActivity"
            android:parentActivityName="com.example.chessclock.MainActivity"
            android:theme="@style/activity_theme" />
        <activity
            android:name="com.example.chessclock.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>